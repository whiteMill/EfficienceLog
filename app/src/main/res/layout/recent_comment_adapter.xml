<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
              android:layout_height="wrap_content">

    <TextView
        android:text="回复我："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/from_name"
        android:layout_toRightOf="@+id/from_name"
        android:layout_toEndOf="@+id/from_name"
        android:layout_marginLeft="29dp"
        android:textSize="18sp"
        android:layout_marginStart="29dp"
        android:id="@+id/textView4"/>
    <TextView
        android:text="玩李建"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:textSize="18sp"
        android:id="@+id/from_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:text="完成的这是啥东西少时诵诗书所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/comment_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/from_name"
        android:layout_alignStart="@+id/from_name"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"/>
    <TextView
        android:text="2016-12-12 18:09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B5B5B5"
        android:textSize="10sp"
        android:id="@+id/comment_time"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/comment_content"
        android:layout_alignLeft="@+id/from_name"
        android:layout_alignStart="@+id/from_name"/>
</RelativeLayout>